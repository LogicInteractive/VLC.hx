#version 450

// standard in/outputs //////////////////////////////////////////////////////////////

uniform samplerVideo tex;
in vec2 texCoord;
in vec4 color;
out vec4 fragColor;

// custom uniforms //////////////////////////////////////////////////////////////////

// functions ////////////////////////////////////////////////////////////////////////

/////////////////////////////////////////////////////////////////////////////////////

void main()
{
	vec4 outcol = texture(tex, texCoord).bgra;
	outcol.rgb *= color.a;
	fragColor = outcol;
}

/////////////////////////////////////////////////////////////////////////////////////